<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_day</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_day</item>
        <item name="colorAccent">@color/colorAccent_day</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->
    </style>


    <style name="translucentNoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="registerDialog" parent="android:style/Theme.Dialog">
        <!--<item name="android:background">@null</item>-->
        <!--<item name="android:windowBackground">@null</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <!-- 日间模式 -->
    <style name="AppTheme.day" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_day</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_day</item>
        <item name="colorAccent">@color/colorAccent_day</item>
        <item name="containerBackground">@color/background_day</item>
        <item name="titleColor">@color/title_day</item>
        <item name="textColor">@color/text_day</item>
        <item name="cardBackground">@color/card_day</item>
        <item name="tabColor">@color/tab_day</item>
        <item name="headerImage">@drawable/drawer_day</item>
        <item name="bottomInActive">@color/bottomInActive_day</item>
        <item name="bottomActive">@color/bottomActive_day</item>
        <item name="bottomBackground">@color/bottomBackground_day</item>
        <item name="downloadDrawable">@drawable/ic_file_download</item>

    </style>
    
    <!-- 夜间模式 -->
    <style name="AppTheme.night" parent="AppTheme.NoActionBar">

        <item name="bottomInActive">@color/bottomInActive_night</item>
        <item name="bottomActive">@color/bottomActive_night</item>
        <item name="bottomBackground">@color/bottomBackground_night</item>
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorAccent">@color/colorAccent_night</item>
        <item name="containerBackground">@color/background_night</item>
        <item name="titleColor">@color/title_night</item>
        <item name="textColor">@color/text_night</item>
        <item name="cardBackground">@color/card_night</item>
        <item name="tabColor">@color/tab_night</item>
        <item name="headerImage">@drawable/drawer_night</item>
        <item name="downloadDrawable">@drawable/ic_download</item>

    </style>
    
    <style name="NormalCard">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">?cardBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>    </style>

    <style name="NormalTab" parent="Widget.Design.TabLayout">
        <item name="android:background">?colorPrimary</item>
        <item name="tabIndicatorColor">?tabColor</item>
        <item name="tabTextAppearance">@style/MyTextAppearance</item>
    </style>
    
    <style name="MyTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
</resources>
