<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rela_add_comment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="?cardBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/et_comment"
        android:textSize="15sp"
        android:hint="@string/text_saysomething"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_likes"
        android:layout_toStartOf="@+id/btn_sendComment"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_likes"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="7dp"
        android:src="@drawable/ic_likes_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:textColor="@android:color/white"
        android:id="@+id/btn_sendComment"
        android:background="?colorPrimary"
        android:text="@string/text_send"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/iv_likes"
        android:layout_alignParentEnd="true" />
</RelativeLayout>