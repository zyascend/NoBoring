<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_pic"
        android:layout_width="90dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/tv_title"
        android:textColor="?textColor"
        android:lines="1"
        android:maxLength="10"
        tools:text="djsalasdbnjasdkjddsahdsjhdjsdhsjdhhdsj"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_delete"
        android:layout_alignStart="@+id/progressBar" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_size"
        android:textColor="?textColor"
        android:lines="1"
        android:maxLength="10"
        tools:text="5/10"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar" />

    <TextView
        tools:text="下载中"
        android:id="@+id/btn_state"
        android:textColor="@color/white"
        android:background="@drawable/bg_round"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_delete" />

    <ImageView
        android:id="@+id/iv_delete"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_state"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <ProgressBar
        android:layout_marginStart="10dp"
        android:max="100"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/tv_progress"
        android:layout_toEndOf="@+id/iv_pic" />

    <TextView
        android:id="@+id/tv_progress"
        android:textColor="?textColor"
        android:lines="1"
        android:maxLength="10"
        android:layout_marginStart="10dp"
        tools:text="50%"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>